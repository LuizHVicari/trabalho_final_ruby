<p style="color: green"><%= notice %></p>

<%= render @list %>

<hr>

<%# <%= @list.products.map(&:name)%>

<% @list.products.each do |product|%>

  <%if product.bought%>
  <div style="background-color: #5cb85c; display:table;" class="mb-3 px-3 py-1 rounded">
    <strong>Product: </strong><%= product.name %><strong>$</strong> <%= product.price %> <strong>Bought</strong>
   </div>
    <%else%>
    <div style="background-color: #d9534f; display:table;" class="mb-3 px-3 py-1 rounded">
      <strong>Product: </strong><%= product.name %><strong>$</strong> <%= product.price %> <strong>Not bought</strong>
    </div>
  <%end%>
<%end%>

<hr>

<div>
  <%= link_to "Edit this list", edit_user_list_path, :class=> "btn btn-primary me-2"%>
  <%= link_to "Back to lists", user_lists_path, :class=>"btn btn-secondary me-2" %>

  <%= button_to "Destroy this list", [@list.user, @list], method: :delete, :class => "btn btn-danger mt-2" %>

</div>
